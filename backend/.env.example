# =====================
# Portfolio Backend - Environment Configuration
# =====================
# Copy this file to .env and fill in your actual credentials.

# =====================
# Authentication (REQUIRED)
# =====================

# JWT secret for token signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# JWT token expiration in minutes (default: 60 = 1 hour)
JWT_EXPIRATION_MINUTES=60

# JWT refresh threshold in minutes (default: 15 = sliding window refresh)
JWT_REFRESH_THRESHOLD_MINUTES=15

# Admin credentials for login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# =====================
# Firebase / Firestore Credentials (REQUIRED)
# =====================

# Option 1: Path to service account JSON file
FIREBASE_CRED_PATH=serviceAccountKey.json

# Option 2: Base64-encoded service account JSON (for containerized deployments)
# FIREBASE_CRED_BASE64=

# =====================
# Gemini AI / Chatbot (REQUIRED for chat endpoint)
# =====================

# Get your API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# =====================
# GitHub Integration (OPTIONAL - only needed for projects/contacts sync)
# =====================

# GitHub personal access token (needs repo read/write permissions)
GITHUB_TOKEN=ghp_your_token_here

# Full path to projects JSON (format: owner/repo/path/to/projects.json)
GITHUB_PROJECTS_DIRECTORY=monojitgoswami69/my-portfolio-website/public/projects.json

# Full path to contacts JSON (format: owner/repo/path/to/contact.json)
GITHUB_CONTACTS_DIRECTORY=monojitgoswami69/my-portfolio-website/public/contact.json

# Full path to project images directory (format: owner/repo/path/to/images)
GITHUB_PROJECT_IMAGES_DIRECTORY=monojitgoswami69/my-portfolio-website/public/projects

# Branch to sync from/to
GITHUB_BRANCH=main
